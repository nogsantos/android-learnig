<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:tag="large-tela2"
               android:baselineAligned="false"
               android:orientation="horizontal">

    <fragment class="br.com.nogsantos.primeiroprojeto.ListBookFragment"
              android:id="@+id/list_book_fragment"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              tools:layout="@layout/fragment_book_list"/>

    <fragment class="br.com.nogsantos.primeiroprojeto.DetailBookFragment"
              android:id="@+id/detail_book_fragment"
              android:layout_width="0dp"
              android:layout_weight="2"
              android:layout_height="match_parent"
              tools:layout="@layout/fragment_book_detail"/>

</LinearLayout >
